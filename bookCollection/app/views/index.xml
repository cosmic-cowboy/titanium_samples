<Alloy>
	<Collection src="books" />
	<Window class="container">
		<!-- add tableview and row -->
		<!-- assign books to the TableView element's dataCollection -->
		<TabelView dataCollection="books">
			<TabelViewRow title="{title}" author="{author}" onClick="showBook"></TabelViewRow>
		</TabelView>
	</Window>
</Alloy>